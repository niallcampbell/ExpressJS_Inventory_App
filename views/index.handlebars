<h1 class="text-center mb-3">{{title}}</h1>


<h3>Add Item</h3>
<form action="/api/items" method="POST" class="mb-4">
    
    <div class="form-group">
        <label for="item">Item</label>
        <input type="text" name="item" class="form-control" placeholder="Enter item name">
    </div>
    
    <div class="form-group">
        <label for="price">Price</label>
        <input type="text" name="price" class="form-control" placeholder="Enter item price">
    </div>
    
    <input type="submit" value="Add Item" class="btn btn-primary btn block">
    
</form>

<br/>

<h4>Items</h4>

<table class="table table-hover">
    
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Item Name</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        {{#each inventoryItems}}
            <tr>
                <td scope="row">{{this.id}}</td>
                <td>{{this.item}}</td>
                <td>{{this.price}}</td>
            </tr>
        {{/each}}
    </tbody>
    
</table>